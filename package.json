{
  "name": "pushbullet-sms-client",
  "version": "0.1.0",
  "description": "An Electron/React-based Pushbullet client for SMS",
  "private": true,
  "main": "main.js",
  "homepage": "./",
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-react-app": "^2.1.0",
    "eslint-plugin-flowtype": "^2.46.1",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.7.0",
    "flow-bin": "^0.68.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.0",
    "node-sass-chokidar": "^1.2.2",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.11.1",
    "react-scripts": "1.1.4",
    "stylelint": "^9.1.3",
    "stylelint-config-prettier": "^3.0.4",
    "stylelint-config-recommended": "^2.1.0"
  },
  "dependencies": {
    "@fortawesome/fontawesome": "^1.1.8",
    "@fortawesome/fontawesome-free-regular": "^5.0.13",
    "@fortawesome/fontawesome-free-solid": "^5.0.13",
    "@fortawesome/react-fontawesome": "^0.0.20",
    "electron": "^2.0.2",
    "match-sorter": "^2.2.3",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-router-dom": "^4.2.2"
  },
  "scripts": {
    "build-css": "node-sass-chokidar src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar src/ -o src/ --watch --recursive",
    "start-js": "react-scripts start",
    "start": "npm-run-all -p watch-css start-js",
    "build-js": "react-scripts build",
    "build": "npm-run-all build-css build-js",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "prettier-all": "prettier --write '**/*.{js,json,css}'",
    "precommit": "lint-staged",
    "flow": "flow"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nzambello/pushbullet-sms-client.git"
  },
  "keywords": [
    "pushbullet",
    "javascript",
    "electron",
    "react",
    "sms"
  ],
  "author": "Nicola Zambello <nzambello@protonmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nzambello/pushbullet-sms-client/issues"
  },
  "lint-staged": {
    "*.{js,json,css}": [
      "prettier --write",
      "git add"
    ]
  }
}
